{
    "format_version": 2,
    "min_clients": 6,
    "num_rounds": 80,
    "seed": 999,
    "hyperion": true,
    "model_path": "models.classification.vgg11",
    "server": {
        "heart_beat_timeout": 600
    },
    "task_data_filters": [],
    "task_result_filters": [],
    "components": [
        {
            "id": "persistor",
            "name": "PTFileModelPersistor",
            "args": {
                "model": "model",
                "source_ckpt_file_full_name": null
            }
        },
        {
            "id": "model",
            "path": "{model_path}",
            "args": {
                "seed": "{seed}"
            }
        },
        {
            "id": "shareable_generator_base",
            "name": "FullModelShareableGenerator",
            "args": {}
        },
        {
            "id": "shareable_generator_fedopt",
            "name": "PTFedOptModelShareableGenerator",
            "args": {
                "device": "cpu",
                "source_model": "model",
                "optimizer_args": {
                    "path": "torch.optim.Adam",
                    "args": {
                        "lr": 0.001
                    },
                    "config_type": "dict"
                },
                "lr_scheduler_args": {
                    "path": "torch.optim.lr_scheduler.StepLR",
                    "args": {
                        "step_size": 1,
                        "gamma": 0.99
                    },
                    "config_type": "dict"
                }
            }
        },
        {
            "id": "aggregator",
            "name": "InTimeAccumulateWeightedAggregator",
            "args": {
                "expected_data_kind": "WEIGHT_DIFF",
                "exclude_vars": ""
            }
        },
        {
            "id": "metric_logger",
            "path": "fl_bench.utils.metric_logger.GlobalMetricLogger",
            "args": {
                "log_dir": "logs",
                "log_name": "accuracy"
            }
        },
        {
            "id": "model_selector",
            "name": "IntimeModelSelector",
            "args": {
                "weigh_by_local_iter": true
            }
        },
        {
            "id": "model_locator",
            "path": "fl_bench.utils.model_locator.SimpleModelLocator",
            "args": {}
        },
        {
            "id": "json_generator",
            "name": "ValidationJsonGenerator",
            "args": {}
        },
        {
            "id": "formatter",
            "path": "fl_bench.utils.simple_formatter.SimpleFormatter",
            "args": {}
        },
        {
            "id": "report_generator",
            "path": "fl_bench.utils.report_generator.ReportGenerator",
            "args": {}
        }
    ],
    "workflows": [
        {
            "id": "scatter_and_gather",
            "name": "ScatterAndGather",
            "args": {
                "min_clients": "{min_clients}",
                "num_rounds": "{num_rounds}",
                "start_round": 0,
                "wait_time_after_min_received": 1,
                "aggregator_id": "aggregator",
                "persistor_id": "persistor",
                "shareable_generator_id": "shareable_generator_base",
                "train_task_name": "train",
                "train_timeout": 0,
                "task_check_period": 1
            }
        },
        {
            "id": "cross_site_model_eval",
            "name": "CrossSiteModelEval",
            "args": {
                "model_locator_id": "model_locator",
                "formatter_id": "formatter",
                "submit_model_timeout": 600,
                "validation_timeout": 6000,
                "cleanup_models": true
            }
        }
    ]
}